<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/parent_line_status_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@color/colorNormal">
    <TextView
            android:id="@+id/line_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanjung Priok Line"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_tanjung_priok_18dp"/>
    <TextView
            android:id="@+id/status_short_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Perjalanan Normal"
            />
    <TextView
            android:id="@+id/status_stasiun_affected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stasiun Manggarai"/>

</LinearLayout>