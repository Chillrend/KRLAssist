<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="400dp"
             android:layout_height="250dp"
             android:layout_gravity="center"
             android:background="@color/bpTransparent"
             android:gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@color/bpTransparent"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
                android:id="@+id/dialog_parent"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="15dp"
                app:cardBackgroundColor="@color/colorDanger"
                >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp">

                <ImageView
                        android:id="@+id/dialog_line_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_loop_line_18dp"/>

                <TextView
                        android:id="@+id/dialog_line_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="Loop Line"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

            </LinearLayout>


            <TextView
                    android:id="@+id/dialog_long_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="Terjadi Rel Patah di Lintas Citayam - Bogor, Jalur Hulu Hilir tidak dapat dilewati"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:id="@+id/frmNo"
            android:layout_marginTop="75dp">

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/okButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:color/transparent"
                app:backgroundTint="@color/bpWhite"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="6dp"
                android:text="Ok"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
    </FrameLayout>


</FrameLayout>