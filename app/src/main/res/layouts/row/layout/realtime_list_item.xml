<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/parent_realtime_list_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/defaultLine"
        android:padding="10dp"
        >
    <TextView
            android:id="@+id/nomor_ka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:text="D1/2540"/>
    <TextView
            android:id="@+id/relasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/nomor_ka"
            android:textSize="24sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="Bogor - Jakarta Kota"/>

    <TextView
            android:id="@+id/realtime_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/relasi"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:text="Berangkat Depok"/>

    <LinearLayout
            android:layout_toLeftOf="@id/nomor_ka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentRight="true">
        <TextView
                android:id="@+id/rangkaian_static_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:text="Rangkaian"/>
        <TextView
                android:id="@+id/stamformasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="12"/>
        <TextView
                android:id="@+id/SF_static_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:text="SF"/>
    </LinearLayout>


</RelativeLayout>