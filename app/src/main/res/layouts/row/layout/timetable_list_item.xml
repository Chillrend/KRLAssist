<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/parent_timetable_list_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/defaultLine"
        android:padding="10dp"
        >
    <LinearLayout
            android:id="@+id/nomor_ka_wrapper"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/timetable_nomor_ka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:text="D1/2540"/>
        <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/timetable_relasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:text="Bogor - Jakarta Kota"/>

    </LinearLayout>

    <TextView
                android:id="@+id/timetable_stasiun_keberangkatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomor_ka_wrapper"
                android:textSize="26sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="Jakarta Kota "/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp">

        <TextView
                android:id="@+id/pukul_static_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:text="Pukul"/>

        <TextView
                android:id="@+id/timetable_departed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:text="9:22"/>
    </LinearLayout>


</RelativeLayout>